.search_index{
  padding: 30rpx;
}
.search_input{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search_inner{
  width: 80%;
  position: relative;
}
.ico{
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #c9c9c9;
}
.search_online{
  width: 100%;
  height: 80rpx;
  border: 0 solid #ebecec;
  border-radius: 10rpx;
  padding-left: 80rpx;
  box-sizing: border-box;
  background-color: #ebecec;
  color: #c9c9c9;
}
.change_btn{
  color: #333;
}
.record_wrap{
  padding: 30rpx 0;
}
.record_title{
  display: flex;
  justify-content: space-between;
  color: #333;
  font-weight: bold;
}
.fa-trash-o{
  color: #c9c9c9;
}
.record_content{
  padding: 30rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.record_item{
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  border: 1rpx solid #ebecec;
  border-radius: 10rpx;
  background-color: #ebecec;
  text-align: center;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.no_record{
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 50rpx 0;
  color: #ccc;
}
.hotSearch_title{
  font-weight: bold;
  color: #333;
}
.hotSearch_content{
  padding: 30rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.hotSearch_item{
  box-sizing: border-box;
  padding: 15rpx 20rpx;
  border: 1rpx solid #ebecec;
  border-radius: 10rpx;
  background-color: #ebecec;
  text-align: center;
  font-size: 32rpx;
  line-height: 32rpx;
  color: #666;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}